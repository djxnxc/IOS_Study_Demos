//Y坐标显示：最大-最小的均值。
- (CGRange)UUChartChooseRangeInLineChart:(UUChart *)chart
{
    
    NSInteger max=maxValue;
    NSInteger min=0;
    for (NSString *s in _yValueArray) {
        float i = [s floatValue];
        if (i>=max) {
            max=i;
        }
        if (i<=min) {
            min=i;
        }
        
    }
    if (min>=1) {
        return CGRangeMake(max+1, min-1);
    }else{
        return CGRangeMake(max+1, min);
    }
    

}
